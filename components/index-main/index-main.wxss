  margin:0 auto;
  line-height: 100vh;
  background:#fff;
  z-index:9999;
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.title_box{
  text-align: center;  
  height: 30px;
  line-height: 30px;
}
