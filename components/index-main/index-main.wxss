/* components/indexmain/index-mian.wxss */
.main{
  display: flex;
  overflow: hidden;
  justify-content: space-between;
}
.menuBox{
  height: 100vh;
  overflow-y: auto;
}
.menu_scrollBox{
  height: 90%;
}
.menu-list{
  width:75px;
  padding:10px;
  font-size:12px;
  background: #eef;
  border-left:3px solid #eef;  
  box-sizing: border-box;
}
.productBox{
  width:90%;
  height: 100vh;
  overflow-y: auto;
  padding-left:5px;
}
.scrollBox{
  height: 90%;
}
.navActive{
  border-left:3px solid burlywood;
  background: #fff;
}
.product-list{
  box-sizing: border-box;
}
.title{
  font-size:11px;
  display: block;
  height:30px;
  line-height: 30px;
}
.product{
  display: flex;
  margin-bottom:20px;
  padding-right:10px;
  box-sizing: border-box;
}
.imgBox{
  width: 30%;
  height: 50px;
}
.img{
  width:100%;
  height:100%;
}
.descBox{
  width:70%;
  position: relative; 
}
.product_name{
  font-size:12px;
  font-weight:700;
}
.product_desc{
  margin:5px 0px;
  display: block;
  font-size:10px;
  color:#bbb;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 4px;
}
.product_price{
  font-weight: 900;
  font-size:14px;
}

.detailBox{
  position:fixed;
  left:10vw;
  right:10vw;
  top:20%;
  bottom:10%;
  width:75vw;
  height: 60vh;
  margin:0 auto;
  line-height: 100vh;
  background:#fff;
  z-index:9999;
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.msgBox{
  height: 90%;
}
.current_img_box{
  width:100%;
  height: 53%;
  text-align: center;
}
.current_img{
  width:70%;
  height: 85%;
  margin:0 auto;
  display: block;
}
.current_text_box{
  height: 47%;
  line-height: 20px;  
  background: #eee;
  padding:10px 15px;  
  box-sizing: border-box;
  position: relative;   
}
.closeBox{
  width:100%;
  height:30px;
  text-align: right;
  line-height: 30px;
}
.choose_two{
  right:10px;
  bottom:10px;
}
.close{
  padding:10px 10px 0px 10px;
  font-size:18px;
  color:#aaa;
  font-weight: 200;  
}
.coverBox{
  position:fixed;
  left:0;
  top:0;
  width:100vw;
  height: 100vh;
  background: rgba(0, 0, 10, 0.5);
  z-index:90;
}

.chooseBox{
   position:fixed;
  left:10vw;
  right:10vw;
  top:20%;
  bottom:10%;
  width:75vw;
