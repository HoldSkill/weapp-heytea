  }
.classify_box{
  height:80%;
  display: flex;
  flex-direction: column;
  padding-bottom:50px;
}
.currentProduct_section_group{
  height: 1;
  line-height: 100%;
}
.add_to_car_box{
  width:100%;
  position: absolute;
  left:0;
  bottom:0;
  padding: 5px 10px;
  height: 50px;
  background: #eee;
  line-height: 0px;
  box-sizing: border-box;
  display: flex;
}
.car_text_box{
  width:55%;
}
.car_go_box{
  width:45%;
  text-align: center;
}
.add_to_car{
  margin: 0 auto;  
  margin-top: 5px;
  background: burlywood;
  color:white;
  display: block;
  padding:5px 10px;
  border-radius:10px;
  float:right;
  height: 20px;
  line-height: 20px;
  font-size:12px;
}
.current_price{
  display: block;  
  font-weight: 900;
