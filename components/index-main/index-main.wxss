  line-height: 18px;
}
.current_choose{
  display: block;
  font-size:12px;
  color:#aaa;
}
.choose_section{
  height: 16px;
  overflow: hidden;
  line-height: 16px;
}
.current_choose_item{
  display: inline-block;
  height: 16px;
  font-size:10px;
  color:#aaa;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  margin-bottom: 4px;
}
.current_cut{
  border:1px solid #ccc;
  background: #fff;
